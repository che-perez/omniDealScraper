{
  "compilerOptions": {
    "target": "ES2020", // Or your desired ECMAScript target
    "module": "commonjs", // Or your desired module system (e.g., "esnext")
    "outDir": "./dist", // Output directory for compiled JavaScript
    "rootDir": "./api", // Root directory of your TypeScript source files
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./api/**/*.ts"], // Specify which files to include for compilation
  "exclude": ["node_modules"] // Exclude node_modules from compilation
}