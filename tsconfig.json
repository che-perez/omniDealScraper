{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./api"
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules"],

  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}